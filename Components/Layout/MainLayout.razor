@inherits LayoutComponentBase
@using Customer_Information
@inject IJSRuntime JSRuntime
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    <main>
        <div class="top-row px-4">
            <button class="btn btn-danger" @onclick="close">Close Application </button>
        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
@code {
    async Task close()
    {
        Logger.LogClose();
        await JSRuntime.InvokeVoidAsync("closeWindow");
    }
}
<script>
        function closeWindow() {
        window.close(); // Close the browser window
    }

</script>